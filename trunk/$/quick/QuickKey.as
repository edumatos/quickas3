package quick{	import flash.display.Stage	import flash.events.KeyboardEvent	public class QuickKey{		private static var stage:Stage		private static var down:Object = {}		public static function Init(s:Stage){			if(stage == null && s != null){				stage = s				stage.addEventListener(KeyboardEvent.KEY_DOWN, function(e:KeyboardEvent){					down[e.keyCode] = true				})				stage.addEventListener(KeyboardEvent.KEY_UP, function(e:KeyboardEvent){					if( down[e.keyCode] ) 						delete down[e.keyCode]				})			}		}		public static function isKeyDown(key:int):Boolean{			return down[key] ? true : false		}				public static function showKeys():void{			var ret:String = ""			for(var k:String in down){				ret += "\t" + k + "\n"			}			if( ret != "") trace( "Keys down:\n" + ret )		}	}	}